<Window x:Class="ÖV_Stationssucher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ÖV_Stationssucher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="90*"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" FlowDirection="LeftToRight" Columns="3">
                <Button>Farhplan</Button>
                <Button>Abfahrtsplan</Button>
                <Button>Stationen</Button>
            </UniformGrid>
        </Grid>

        <Grid Grid.Column="1">

        </Grid>
    </Grid>
</Window>
