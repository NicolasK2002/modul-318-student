<Window x:Class="ÖV_Stationssucher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ÖV_Stationssucher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="load">
    <Grid>
        <TabControl>
            <TabItem Header="Fahrplan">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter Width="5" Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Abfahrtsplan">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter Width="5" Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Stationen">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label>Station:</Label>
                        <TextBox Name="station_input" />
                        <Button Width="100" Click="findStationNames">Stationen Suchen</Button>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <GroupBox Header="Stationsnamen">
                            <ListBox Name="stationname_list"/>
                        </GroupBox>
                        <!--<UniformGrid>
                        <Button Width="50">
                            <Image Width="40" Source="res/stationenLeft.png"/>
                        </Button>
                        <Button Width="50">
                            <Image Width="40" Source="res/stationenRight.png"/>
                        </Button>
                        </UniformGrid>-->
                    </StackPanel>

                    <GridSplitter Width="5" Grid.Column="0"/>
                </Grid>
            </TabItem>
        </TabControl>
        </Grid>
</Window>
